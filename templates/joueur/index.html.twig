{% extends 'base.html.twig' %}

{% block title %}Joueur index{% endblock %}

{% block body %}
    <h1>Joueur index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Password</th>
            <th>Nom</th>
            <th>Pseudo</th>
            <th>image</th>

            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for joueur in joueurs %}
            <tr>
                <td>{{ joueur.id }}</td>
                <td>{{ joueur.email }}</td>
                <td>{{ joueur.password }}</td>
                <td>{{ joueur.nom }}</td>
                <td>{{ joueur.pseudo }}</td>
                <td>{{ joueur.image }}</td>
                <td>
                    <a href="{{ path('joueur_show', {'id': joueur.id}) }}">show</a>
                    <a href="{{ path('joueur_edit', {'id': joueur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('joueur_new') }}">Create new</a>
{% endblock %}


